<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Criar atividade</center></h3>
      </div>
    </div>


    <div class="panel-body">
      <%= form_for(@activity, html: {class: 'form-horizontal'}) do |f| %>

        <% if @activity.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-dismissible alert-danger">
              <h5><%= "Existe(m) #{pluralize(@activity.errors.count, 'erro(s)')} no formulário:" %></h5>
            <ul>
            <% @activity.errors.full_messages.each do |message| %>
                <li><h6><%= message %></h6></li>
            <% end %>
            </ul>
            </div>
          </div>
          <br>
        <% end %>

        <div class="panel-body">

          <% unless current_user_total? %>
            <%= hidden_field_tag("project", @project) %>
            <%= hidden_field_tag("sprint", @sprint) %>
          <% end %>

          <fieldset>

            <div class="form-group">
              <label class="col-lg-2 control-label">Descrição: </label>
              <div class="col-lg-8">
                <%= f.text_field :description, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-2 control-label">Pontos cadastrados: </label>
              <div class="col-lg-3">
                <%= f.number_field :pontos_cadastrados, value: 0, min: 0, class: 'form-control' %>
              </div>
            </div>

            <%# editado %>
            <div class="form-group">
              <label class="col-lg-2 control-label">Status: </label>
              <div class="col-lg-6">
                  <%= f.select(:status_id,
                          Status.all.collect {|s| [ s.description, s.id ] },
                          {},
                          {class: "form-control"}) %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-2 control-label">Rótulo: </label>
              <div class="col-lg-6">
                <%= f.select(:label_id,
                        Label.all.collect {|l| [ l.description, l.id ] },
                        {},
                        {class: "form-control"}) %>
              </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Projeto: </label>
                <div class="col-lg-6">
                  <% if current_user_total? %>
                    <%= f.select(:project_id,
                            Project.all.collect {|p| [ truncate(p.description, length: 50), p.id ] },
                            {},
                            {class: "form-control"}) %>
                  <% else %>
                    <%= f.select(:project_id,
                            Project.all.collect {|p| [ truncate(p.description, length: 50), p.id ] },
                            {selected: @project.id},
                            {class: "form-control"}) %>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-2 control-label">Sprint: </label>
                <div class="col-lg-6">
                  <% if current_user_total? %>
                    <%= f.select(:sprint_id,
                            Sprint.all.collect {|s| [ truncate(s.description, length: 50), s.id ] },
                            {},
                            {class: "form-control"}) %>
                  <% else %>
                    <%= f.select(:sprint_id,
                            Sprint.all.collect {|s| [ truncate(s.description, length: 50), s.id ] },
                            {selected: @sprint.id},
                            {class: "form-control"}) %>
                  <% end %>
                </div>
              </div>

          </fieldset>
        </div>

      <%= f.submit t('buttons.save'), class: "btn btn-primary" %> |
      <%= link_to t('buttons.back'), activities_path, class: "btn btn-success" %>

    </div>
  </div>

<% end %>
