<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Visualização da atividade</center></h3>
      </div>
    </div>

    <div class="panel-body">

    <%# adicionado %>
      <% unless current_user_total? %>
        <ul class="breadcrumb" style="background-color: #3e3b3b;">
          <li><%= link_to "Projeto", project_path(@project) %></li>
          <li><%= link_to "Sprint", sprint_path(@sprint, project: @project) %></li>
          <li class="active">Atividade</li>
        </ul>
      <% end %>

      <span class="title">Descrição:</span> <%= @activity.description %> <br>
      <span class="title">Pontos desejados:</span> <%= @activity.pontos_cadastrados %> <br>
      <span class="title">Status:</span> <%= @activity.status.blank? ? '-' : @activity.status.description %> <br>
      <span class="title">Rótulo:</span> <%= @activity.label.blank? ? '-' : @activity.label.description %> <br>
      <span class="title">Projeto: </span> <%= @activity.project.description %> <br>
      <span class="title">Sprint:</span> <%= @activity.sprint.blank? ? '-' : @activity.sprint.description %>


      <br><br><br>

      <% if can? :update, Activity %>
        <%= link_to t('buttons.edit'), edit_activity_path(@activity), class: "btn btn-primary" %> |
      <% end %>

      <%# editado %>
      <%= link_to t('buttons.back'), sprint_path(@activity.sprint.id, project: @activity.project.id), class: "btn btn-success" %>

    </div>

  </div>
</div>
