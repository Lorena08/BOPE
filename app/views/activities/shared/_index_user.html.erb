<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Lista de atividades</center></h3>
      </div>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover ">

          <thead>
            <tr>
              <th>Descrição</th>
              <th>Pontos cadastrados</th>
              <th>Status</th>
              <th>Rótulo</th>
              <th>Sprint</th>
              <th>Projeto</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <% project.sprints.each do |sprint| %>
                <% sprint.activities.each do |activity| %>
                  <tr>
                    <td>
                      <%= truncate(activity.description, length: 25) %>
                    </td>
                    <td>
                      <%= activity.pontos_cadastrados %>
                    </td>
                    <td>
                      <%= activity.status.blank? ? '-' : activity.status.description %>
                    </td>
                    <td>
                      <%= activity.label.blank? ? '-' : activity.label.description %>
                    </td>
                    <td>
                      <%= truncate(sprint.description, length: 20) %>
                    </td>

                    <td>
                      <%= truncate(project.description, length: 20) %>
                    </td>

                    <td>
                      <%= link_to "Visualizar", activity_path(activity, project: project, sprint: sprint) %>
                    </td>
                    <td>
                      <%= link_to t('buttons.edit'), edit_activity_path(activity) %>
                    </td>
                    <td>
                      <%= link_to t('buttons.destroy'), activity, method: :delete, data: { confirm: t('messages.confirm') } %>
                    </td>

                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>

        </table>

      <center><%= paginate @projects %></center>

    </div>
  </div>
</div>
