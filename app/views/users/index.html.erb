<br/>
<div class="basic-grey">

  <script>
    $.notify("<%= notice %>", "success");
  </script>

  <h1><%= "#{t('messages.listing')} #{@users.model.model_name.human(count: @users.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @users.model.human_attribute_name("name") %></th>
        <th><%= @users.model.human_attribute_name("email") %></th>
        <th><%= @users.model.human_attribute_name("password") %></th>
        <th><%= @users.model.human_attribute_name("student_number") %></th>
        <th><%= @users.model.human_attribute_name("access") %></th>

        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr style="background: <%= cycle('white', '#f0f0f5') %>">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= user.student_number %></td>
          <td><%= user.access %></td>
          <td><%= link_to t('buttons.edit'), edit_user_path(user) %></td>
          <td><%= link_to t('buttons.destroy'), user, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @users %>

  <br>

  <%= link_to t('buttons.new'), new_user_path, class: "btn btn-primary" %>
  <%= link_to t('buttons.home'),root_path, class: "btn btn-success" %>

</div>
