<br/>
<%= form_tag team_users_edit_multiple_path do %>

  <h2><center>Visualização da equipe</center></h2>
<br/>
  <div class="col-sm-15 panel panel-default">
    <div class="col-sm-3 panel-body">
      <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to t('buttons.home'),root_path %></li>
      <li class="danger"><%= link_to "Usuários", user_profile_index_path %></li>
      <li class="warning"></span><%= link_to "Equipes", teams_path %></li>
      <li class="success"><a href="#">Projetos</a></li>
      <li class="info"><a href="#">Relatórios</a></li>
      <li class="warning"><%= link_to "Sprints", sprints_path %></li>
      </ul>
    </div>
    <div class="col-sm-9 panel-body">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><center>Informações</center></h3>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Descrição: <%= @team.description %></th>
            </tr>
            <tr>
              <th><%= hidden_field_tag "team_id", @team.id %>
                Usuários:<% @team.users.each do |user| %>
                  <li><%= user.user_profile.name %></li>
                <% end %>
              </th>
            </tr>
          </thead>
      </table>
    </div>
      <% if can? :update, Team %>
        <%= link_to t('buttons.edit'), edit_team_path, class: "btn btn-primary" %> |
        <%= submit_tag "Editar usuários da equipe", class: "btn btn-default" %> |
      <% end %>
      <%= link_to t('buttons.back'),teams_path, class: "btn btn-success" %>


    </div>
  </div>
  <% end %>
