<div class="col-sm-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Lista de equipes</center></h3>
      </div>
    </div>

    <div class="panel-body">
      <table class="table table-striped table-hover ">

        <thead>
          <tr>
            <th><center><%= @teams.model.human_attribute_name("description") %></center></th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td>
                <center><%= team.description %></center>
              </td>
              <td>
                <%= link_to "Visualizar", team_path(team) %>
              </td>
              <td>
                <% if can? :update, Team %>
                  <%= link_to t('buttons.edit'), edit_team_path(team) %>
                <% end %>
              </td>
              <td>
                <% if can? :destroy, Team %>
                  <%= link_to t('buttons.destroy'), team, method: :delete, data: { confirm: t('messages.confirm') } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

      <center><%= paginate @teams %></center>

      <% if can? :create, Team %>
        <%= link_to t('buttons.new'), new_team_path, class: "btn btn-primary" %> |
      <% end %>
      <%= link_to t('buttons.back'),root_path, class: "btn btn-success" %>

    </div>
  </div>
</div>
