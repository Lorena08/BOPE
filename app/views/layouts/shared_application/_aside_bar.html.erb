<div class="col-lg-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">

        <li class=<%= aside_bar_active('home') %>>
          <%= link_to t('buttons.home'), root_path %>
        </li>

        <% if current_user_total? %>
          <li class=<%= aside_bar_active('user_profile') %>>
            <%= link_to "Usuários", user_profile_index_path %>
          </li>
        <% end %>

        <li class=<%= aside_bar_active(params[:controller] == 'team_users' ?
                                       'team_users' : 'teams') %>>
          <%= link_to "Equipes", teams_path %>
        </li>

        <% if current_user_total? %>
          <hr style="border-top-color: dimgray">
        <% end %>

        <li class="<%= aside_bar_active('projects') %> asidebar-dropdown">

          <%= link_to projects_path do %>
            Projetos
            <span class="caret pull-right" style="margin-top: 7px"></span>
          <% end %>

          <ul class="nav nav-pills nav-stacked <%= aside_bar_content_active? %>">
            <div class="well">

              <li class=<%= aside_bar_active('sprints') %>>
                <%= link_to "Sprints", sprints_path %>
              </li>

                <li class=<%= aside_bar_active('activities') %>>
                  <%= link_to "Atividades", activities_path %>
                </li>

              <% if can? :manage, Label %>
                <li class=<%= aside_bar_active('labels') %>>
                  <%= link_to "Rótulos", labels_path %>
                </li>
              <% end %>

              <% if can? :manage, Color %>
                <li class=<%= aside_bar_active('colors') %>>
                  <%= link_to "Cores", colors_path %>
                </li>
              <% end %>

              <% if can? :manage, Status %>
                <li class=<%= aside_bar_active('statuses') %>>
                  <%= link_to "Status", statuses_path %>
                </li>
              <% end %>

            </div>
          </ul>

        </li>

        <% if current_user_total? %>
          <hr style="border-top-color: dimgray">
          <li class="">
            <a>Relatórios</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
