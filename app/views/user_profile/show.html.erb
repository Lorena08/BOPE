<br/>
  <h2><center>Visualização do usuário</center></h2>
<br/>
  <div class="col-sm-15" "panel panel-default">
    <div class="col-sm-3" "panel-heading">
      <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to t('buttons.home'),root_path %></li>
      <li class="danger"><%= link_to "Usuários", user_profile_index_path %></li>
      <li class="warning"></span><%= link_to "Equipes", teams_path %></li>
      <li class="success"><a href="#">Projetos</a></li>
      <li class="info"><a href="#">Relatórios</a></li>
      </ul>
    </div>
    <div class="col-sm-9" "panel-body">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><center>Informações</center></h3>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th colspan="3"><center><%= image_tag @user.user_profile.picture.url(:thumb), class: "paperclip" %>
                                      <span style="margin-left: 20px"><%= @user.user_profile.name %></center></th></span>
            </tr>
          </thead>
        <tbody>
            <tr>
              <td width="250"><center>E-mail: <%= @user.email %></center></td>
              <td width="250"><center>Matrícula: <%= @user.user_profile.student_number %></center></td>
              <td width="250"><center>Acesso: <%= @user.user_profile.role %></center></td>
            </tr>
        </tbody>
      </table>
    </div>
      <%= link_to t('buttons.edit'), edit_user_profile_path(@user), class: "btn btn-primary" %> |
      <%= link_to t('buttons.back'),user_profile_index_path, class: "btn btn-success" %>


    </div>
  </div>
